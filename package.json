{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "start": "npm run server",
    "server": "ts-node -F app/server",
    "server:debug": "ts-node --inspect -F app/server",
    "start:debug": "nodemon --no-colors -e ts,json --watch app --ignore *.spec.ts -x \"ts-node --inspect -F app/server\"",
    "start:dev": "nodemon --no-colors -e ts,json --watch app --ignore *.spec.ts -x \"ts-node -F app/server\"",
    "start:dev:v": "npm run start:dev -- --verbose",
    "test": "npm run eslint && npm run tscheck && npm run t",
    "t": "jest",
    "test:w": "jest --watch",
    "tscheck": "echo tscheck... && tsc --noEmit",
    "tscheck:w": "npm run tscheck -- --watch",
    "tsclint": "tsc --noEmit --pretty false --strictNullChecks --forceConsistentCasingInFileNames --noImplicitReturns --noImplicitThis --noUnusedLocals",
    "tsclint:w": "npm run tsclint -- --watch",
    "eslint": "eslint --ext ts app",
    "eslint:fix": "eslint app --ext \"ts\" --fix",
    "eslint:w": "gulp eslint:w",
    "lint:w": "concurrently -- \"npm run tsclint:w\" \"npm run eslint:w\""
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/app/**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "dependencies": {
    "@nestjs/common": "4.4.2",
    "@nestjs/core": "4.4.2",
    "@nestjs/microservices": "4.4.1",
    "@nestjs/testing": "4.4.1",
    "@nestjs/websockets": "4.4.1",
    "body-parser": "1.18.2",
    "class-transformer": "0.1.8",
    "class-validator": "0.7.3",
    "mongodb": "2.2.33",
    "redis": "2.8.0",
    "reflect-metadata": "0.1.10",
    "rxjs": "5.5.2",
    "sqlite3": "3.1.13",
    "ts-node": "3.3.0",
    "tslib": "1.8.0",
    "typeorm": "0.1.6",
    "typescript": "2.6.2"
  },
  "devDependencies": {
    "@types/express": "4.0.39",
    "@types/jest": "21.1.8",
    "@types/node": "8.0.53",
    "@types/yargs": "8.0.2",
    "concurrently": "3.5.1",
    "eslint": "4.12.1",
    "eslint-import-resolver-node": "0.3.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-tslint": "2.1.0",
    "eslint-plugin-typescript": "0.8.1",
    "eslint-plugin-unicorn": "3.0.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-eslint": "4.0.0",
    "gulp-if": "2.0.2",
    "gulp-ignore": "2.0.2",
    "gulp-load-plugins": "1.5.0",
    "gulp-memory-cache": "0.3.0",
    "jest": "21.2.1",
    "nodemon": "1.12.1",
    "ts-jest": "21.2.3",
    "tslint": "5.8.0",
    "typescript-eslint-parser": "9.0.1",
    "yargs": "10.0.3"
  }
}
